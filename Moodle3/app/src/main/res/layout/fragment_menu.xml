<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lginfor"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_info"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgnext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lggrade"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_grade"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgnext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lgfile"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_file"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgnext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lgweb"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_web"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgvisit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lghellp"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_help"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgvisit"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lgwrench"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_prefer"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgnext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lgsettings"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_settings"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/lgnext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal"
            android:layout_marginVertical="40dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lgout"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_logout"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginHorizontal="15dp"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

